# =============================================================================
# Environment Variables for astro-koharu
# =============================================================================
# Copy this file to .env and fill in your values
# These are sensitive configurations that should NOT be committed to git
# =============================================================================

# -----------------------------------------------------------------------------
# Comment System (Remark42)
# -----------------------------------------------------------------------------
REMARK_URL=https://comment.example.com/
REMARK_SITE_ID=your-site-id

# -----------------------------------------------------------------------------
# Analytics (Umami)
# -----------------------------------------------------------------------------
UMAMI_ID=your-umami-id
UMAMI_ENDPOINT=https://stats.example.com

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# Port to expose the blog on (default: 80)
# Change this if port 80 conflicts with other services
BLOG_PORT=80
