---
/**
 * CMS Admin Page
 *
 * Full-page dashboard for managing blog posts.
 * Only accessible in development mode when CMS is enabled.
 *
 * In production, this page is pre-rendered as a static redirect to 404.
 * This avoids the need for serverless functions and stays under Vercel's 250MB limit.
 */

// Conditional imports - only imported in development, stubbed in production
import { CMSDashboardPage } from '@components/cms';
import { cmsConfig } from '@constants/site-config';
import '@styles/index.css';

// Prerender in production (static), SSR in development
export const prerender = import.meta.env.PROD;

// Guard: Only accessible in dev mode with CMS enabled
if (import.meta.env.DEV && !cmsConfig.enabled) {
  return Astro.redirect('/404');
}
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>CMS Dashboard</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <script is:inline>
      // Theme initialization - prevent FOUC
      (function() {
        function getTheme() {
          if (localStorage.theme === 'dark') return 'dark';
          if (localStorage.theme === 'light') return 'light';
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        var root = document.documentElement;
        var theme = getTheme();
        root.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body class="bg-background text-foreground">
    {import.meta.env.PROD ? (
      <p>CMS is not available. <a href="/">Return to homepage</a></p>
    ) : (
      <CMSDashboardPage client:only="react" />
    )}
  </body>
</html>
